{
    "name": "pudongping/hyperf-kit",
    "description": "Providing utility functions for the Hyperf framework, making development easier.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "helpers",
        "utils",
        "tools",
        "kit"
    ],
    "autoload": {
        "psr-4": {
            "Pudongping\\HyperfKit\\": "src/"
        },
        "files": [
            "src/DBHelpers.php",
            "src/FrameworkHelpers.php",
            "src/SupportHelpers.php",
            "src/SystemHelpers.php"
        ]
    },
    "authors": [
        {
            "name": "pudongping",
            "email": "pudongping67@gmail.com",
            "homepage": "https://github.com/pudongping"
        }
    ],
    "require": {
        "php": ">=8.0",
        "hyperf/async-queue": "~3.0.0",
        "hyperf/cache": "~3.0.0",
        "hyperf/constants": "~3.0.0",
        "hyperf/db": "^3.0",
        "hyperf/db-connection": "~3.0.0",
        "hyperf/filesystem": "^3.0",
        "hyperf/flysystem-oss": "^1.2",
        "hyperf/guzzle": "~3.0.0",
        "hyperf/http-server": "~3.0.0",
        "hyperf/logger": "~3.0.0",
        "hyperf/paginator": "^3.0",
        "hyperf/redis": "~3.0.0",
        "hyperf/utils": "~3.0.0",
        "hyperf/validation": "^3.0",
        "pudongping/smart-assist": "^1.0"
    },
    "require-dev": {
        "swoole/ide-helper": "^5.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "hyperf": {
            "config": "Pudongping\\HyperfKit\\ConfigProvider"
        }
    }
}
